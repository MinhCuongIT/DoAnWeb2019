<div style="width: 100%; border-bottom: 1px solid #da262e; margin-top: 1rem">
    <span style="background-color: #da262e;color: white; font-size: 1.2rem">Kết quả tìm kiếm</span>
</div>

{{#each this.products}}
<div class="card mb-3">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="{{image_link}}" class="card-img" alt="{{title}}">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <a style="text-decoration: none; color: inherit" href="/post?cat={{catId}}&post={{PostID}}">
                    <h6 class="card-title">{{title}}</h6>
                    <p style="font-size: 12px" class="font-italic">
                        {{myDatetime date}}
                        <i class="fa fa-eye fa-sm" aria-hidden="true"></i>
                        {{views}}
                    </p>
                    <p style="font-size: 13px" class="card-text">{{mySubString moTaNgan}}</p>
                    <a class="btn btn-outline-success btn-sm" href="/categories/{{tagId}}" role="button">{{CatName}}</a>
                </a>
            </div>
        </div>
    </div>
</div>
{{/each}}