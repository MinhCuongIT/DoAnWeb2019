<div style="width: 100%; border-bottom: 1px solid #da262e; margin-top: 1rem">
    <span style="background-color: #da262e;color: white; font-size: 1.2rem">{{danhMuc}}</span>
</div>

<div class="row mt-3">
    <img style="margin: auto" width="500px" src="{{post.image_link}}" alt="{{post.title}}">
</div>
<div class="row mt-3 text-center">
    <h4 style="margin: auto">{{post.title}}</h4>
</div>
<div class="row mt-2">
    <div style="margin: auto">
        <p style="font-size: 15px" class="font-italic">
            {{myDatetime post.date}}
            <i class="fa fa-eye fa-sm" aria-hidden="true"></i>
            {{post.views}}
        </p>
    </div>
</div>
<div class="row mt-3 ">
    <div class="card">
        <div class="card-body">
            <p class="card-text">{{post.content}}</p>
        </div>
    </div>
</div>

<div style="width: 100%; border-bottom: 1px solid #25abc2; margin-top: 1rem">
    <span style="background-color: #25abc2;color: white; font-size: 1.0rem">Bài viết cùng chuyên mục</span>
</div>

<div class="row">
    {{#each cungchuyenmuc}}
    <div style="width: 20%; padding: 0.1rem" class="col-sm">
        <a style="text-decoration: none; color: inherit" href="/post?cat={{catId}}&post={{PostID}}">
            <div class="card h-100 shadow" style="margin: 0.1rem">
                <img src="{{image_link}}" class="card-img-top" alt="{{title}}">
                <div class="card-body" style="padding: 0.1rem">
                    <h6 class="card-title">{{title}}</h6>
                    <p style="font-size: 12px" class="font-italic">
                        {{myDatetime date}}
                        <i class="fa fa-eye fa-sm" aria-hidden="true"></i>
                        {{views}}
                    </p>
                    {{!-- <p style="font-size: 13px" class="card-text">{{mySubString content}}</p> --}}
                    <a class="btn btn-outline-primary btn-sm" href="/categories/{{tagId}}" role="button">{{CatName}}</a>
                </div>
        
            </div>
        </a>
    </div>
    {{/each}}
</div>

<div style="width: 100%; border-bottom: 1px solid #c27925; margin-top: 1rem">
    <span style="background-color: #c27925;color: white; font-size: 1.0rem">Ý kiến bạn đọc</span>
</div>

{{!-- Danh sách bình luận --}}
{{#each comments}}
<div class="row mt-3 mb-3">
    <div class="card">
        <div class="card-body">
            <p style="font-size: 16px; font-style: italic">{{content}}</p>
            <div style="width: 100%; display: flex; margin-top: 1rem; font-size: 13px">
                <img style="margin-right: 3px" width="24px" height="24px"
                    src="data:image/png;base64,"
                    alt="">
                <b>{{commenter}}</b>
                <p>{{ myDatetime2 date}}</p>
            </div>
        </div>
    </div>
</div>
{{/each}}

<div style="width: 80%; border-bottom: 1px solid #107906; margin: auto;">

</div>

<form style="margin: 6rem" class="p-3 shadow mt-3" method="POST">
    <div class="form-group">
        <label for="namer">Tên của bạn:</label>
        <textarea required class="form-control" rows="1" id="namer" name="commenter"></textarea>
        <label for="comment">Bình luận:</label>
        <textarea required class="form-control" rows="3" id="comment" name="content"></textarea>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Đăng</button>
    </div>
</form>