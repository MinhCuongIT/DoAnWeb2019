{{#section 'css'}}

{{/section}}

{{#section 'js'}}

{{/section}}

<div class="row w-100 m-3" style="justify-content: center">
    <a style="margin: 0 3px" class="btn btn-outline-success" href="/editor" role="button">Danh sách bài viết Draft</a>
    <a style="margin: 0 3px" class="btn btn-outline-success" href="/editor/viewmypost" role="button">Xem danh sách bài viết</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th class="text-center" scope="col">#</th>
            <th scope="col">Tiêu đề</th>
            <th scope="col">Danh mục</th>
            <th scope="col">Ngày</th>
            <th scope="col">Mô tả ngắn</th>
            <th style="width: 9rem" scope="col">Phóng viên</th>
            <th style="width: 10rem" scope="col">Trạng thái</th>
        </tr>
    </thead>
    <tbody>
        {{#each this.listPost}}
        <tr>
            <th class="text-center" scope="row">{{PostID}}</th>
            <td>{{title}}</td>
            <td>{{CatName}}</td>
            <td>{{myDatetime date}}</td>
            <td>{{moTaNgan}}</td>
            <td>{{name}}</td>
            <td>
                
                {{#if showOk}}
                    <i class="fa fa-check-circle-o" style="color:green" aria-hidden="true"></i>
                {{else}}
                    <i class="fa fa-times-circle-o" style="color:red" aria-hidden="true"></i>
                {{/if}}
                {{trangThai}}</td>
        </tr>
        {{/each}}

    </tbody>
</table>