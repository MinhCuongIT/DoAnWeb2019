{{#section 'css'}}
<link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}


{{#section 'js'}}
<script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script>
    $(function () {
        $('#txtDOB').datetimepicker({
            format: 'd/m/Y',
             timepicker: false,
            mask: true
        });
    })
</script>
{{/section}}
<div class="card shadow">
    <div class="card-header" action="/admin/accountManage/add">
        <h4>
        Thêm tài khoản
        </h4>
    </div>
    <div class="card-body">
         
       <form method="POST" >
        <div class="row">
    <div class="col">
        
     <div class="form-group">
                <label for="username">Tên đăng nhập</label>
                <input autofocus required type="text" class="form-control" id="username" name="username">
            </div>
            <div class="form-group">
                <label for="password">Mật khẩu</label>
                <input required type="password" class="form-control" id="password" name="password">
            </div>
           

             <div class="form-group">
                <label for="name">Tên</label>
                <input autofocus type="text" class="form-control" id="name" name="name"
                    value="{{this.accountManage.name}}">
            </div>
           
            

    </div>
    
            
             
    <div class="col">
     <div class="form-group">
                <label for="email">Email</label>
                <input required type="text" class="form-control" id="email" name="email">
            </div>
           
             <div class="form-group">
                <label for="txtDOB">Ngày sinh</label>
                <input required type="text" class="form-control" id="txtDOB" name="dob">
            </div>
   <div class="form-group">
                <label for="">Loại tài khoản:</label>
                <div class="form-control">
                    <form action="">
                        <div class="form-check-inline">
                            <label class="form-check-label" for="radio1">
                                <input type="radio" class="form-check-input" id="radio1" name="rbLoai"
                                    value="Subscriber" checked>Subscriber
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label" for="radio2">
                                <input type="radio" class="form-check-input" id="radio2" name="rbLoai"
                                    value="Writer">Writer
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label" for="radio3">
                                <input type="radio" class="form-check-input" id="radio3" name="rbLoai"
                                    value="Editor">Editor
                            </label>
                        </div>
                    </form>

                </div>
            </div>
         
            
           
                
            </div>
           
  </div>
           
       
         <button type="submit" class="btn btn-success">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
            
        </form>
        



    </div>
</div>