<div class="card shadow">
    <div class="card-header">
        Edit Category
    </div>
    <div class="card-body">
        {{#if this.error}}
        <div class="alert alert-danger" role="alert">
            Invalid CategoryID. <a href="/admin/categories" class="alert-link">Go back</a>.
        </div>
        {{else}}
        <form method="POST" action="/admin/categories/update">
            <div class="form-group">
                <label for="txtCatID">#</label>
                <input readonly type="text" class="form-control" id="txtCatID" name="CatID"
                    value="{{this.category.CatID}}">
            </div>
            <div class="form-group">
                <label for="CatName">Category Name</label>
                <input autofocus type="text" class="form-control" id="CatName" name="CatName"
                    placeholder="Enter Category Name" value="{{this.category.CatName}}">
            </div>
            <a class="btn btn-primary" href="/admin/categories" role="button">
                <i class="fa fa-backward" aria-hidden="true"></i>
                List
            </a>
            <button type="submit" class="btn btn-danger" formaction="/admin/categories/delete">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                Delete
            </button>
            <button type="submit" class="btn btn-success">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </form>
        {{/if}}



    </div>
</div>