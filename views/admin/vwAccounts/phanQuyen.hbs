<style>
.center {
    
    margin-bottom: 1%;
margin-top: 1%;
margin-left: 5%;
margin-right: 5%;
  padding: 70px 0;
  border: 3px solid green;
}
</style>
<div class="card shadow">
    <div class="card-header text-center">
        <h4>Phân công chuyên mục</h4>
    </div>
    <div class="card-body">
        <form method="POST">
            <div class="card shadow">
                <div class="form-group text-center">
                    <label for=""><b>Chọn biên tập viên:</b></label>
                    <div class="input-group">
                        <select style="margin: 0 10rem ;border: 1px solid green" required class="custom-select" id="inputGroupSelect01"
                            name="selectUser">
                            <option selected>Chọn biên tập viên</option>
                            {{#each users}}
                            <option value="{{UserID}}">{{UserID}}-{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-group text-center">
                    <label for=""><b>Chọn chuyên mục:</b></label>
                    <div class="card shadow center"  >
                    <div class="input-group">
                         {{#each cats}}
                         <div >
                         <input style="margin: 10%" type="checkbox" name="categories" value="{{CatID}}">{{CatName}}
                         </div>
                            {{/each}}
                    </div>
                    </div>
                </div>
            </div>

            <div class="card-footer text-right" style="margin: 0 10rem">
                <button type="submit" class="btn btn-lg btn-success btn-block">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Xác nhận
                </button>
            </div>
        </form>
    </div>
</div>