<div class="card shadow">
    <h1 class="card-header text-center">
        Quản lý tài khoản
    </h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th class="text-center" scope="col">#</th>
                <th scope="col">username</th>
                <th scope="col">Tên hiển thị</th>
                <th scope="col">Email</th>
                <th scope="col">Ngày sinh</th>
                <th scope="col">Loại tài khoản</th>
                <th scope="col" class="text-right">
                    <a class="btn btn-outline-success" href="/admin/accounts/addadmin" role="button">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        Thêm tài khoản Admin
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each this.users}}
            <tr>
                <th class="text-center" scope="row">{{UserID}}</th>
                <td>{{username}}</td>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td>{{myDatetime dob}}</td>
                <td>{{type}}</td>
                <td class="text-right">
                    <a class="btn btn-primary btn-sm" href="/admin/accounts/edit/{{UserID}}" role="button">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>
</div>